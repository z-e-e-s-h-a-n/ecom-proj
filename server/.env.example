
# ==============================
# App Config
# ==============================
NODE_ENV=development
APP_PORT=4000
APP_ENDPOINT="http://localhost:4000"
CORS_ORIGIN="http://localhost:3000"

# ==============================
# Database
# ==============================
DB_URI="postgresql://postgres:47425@localhost:5432/ecom-proj"

# ==============================
# OTP
# ==============================
OTP_EXP="15m" 

# ==============================
# Auth
# ==============================
JWT_ACCESS_SECRET="super-secret-access-key"
JWT_REFRESH_SECRET="super-secret-refresh-key"
ACCESS_TOKEN_EXP="15m"   # 15 minutes
REFRESH_TOKEN_EXP="7d"   # 7 days

# ==============================
# OAuth Providers
# ==============================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:4000/oauth/google/callback"

FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"
FACEBOOK_CALLBACK_URL="http://localhost:4000/oauth/facebook/callback"

# ==============================
# SMS (Twilio)
# ==============================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ==============================
# Email (Resend)
# ==============================
RESEND_API_KEY="your-resend-api-key"

# ==============================
# API Keys
# ==============================
IP_STACK_API_KEY="your-ipstack-api-key"

# ==============================
# Admin
# ==============================
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="super-secret-password"
ADMIN_NAME="Admin User"
ADMIN_PHONE="+1234567890"
